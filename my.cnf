[mysqld]
# Bind to all interfaces (important for external and Docker connections)
bind-address = 0.0.0.0

# Explicitly allow TCP/IP connections
skip-networking = 0

# Use modern authentication plugin (compatible with MySQL 9.x clients)
default-authentication-plugin = caching_sha2_password

# Optional performance tuning
max_connections = 200
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

[client]
# Ensure client uses TCP (not socket) for connections
protocol = tcp